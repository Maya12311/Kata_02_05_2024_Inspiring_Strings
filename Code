public class Kata {
  public static String longestWord(String wordString) {
    String[] seperateIt = wordString.split(" "); 
    String word = ""; 
    for(int i = 0; i< seperateIt.length; i++){
      if(word.length() <= seperateIt[i].length() ){
        word = seperateIt[i]; 
      }
    }
    return word;
    // Give me back the longest word!
  }
}
